! -*- Conf-Xdefaults -*-

! Make Alt keys Control, Capslock Alt_L
clear control
clear mod1
clear lock
keycode 64 = Control_L
keycode 66 = Alt_L
keycode 108 = Control_R
add control = Control_L Control_R
add mod1 = Alt_L

